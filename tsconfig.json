{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015"],
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "node"],
      "jsx": "react"
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "test/**/*.tsx",
      "test/**/*.ts"
    ]
  }
  